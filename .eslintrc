{
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "plugin:jsdoc/recommended",
    "plugin:react-hooks/recommended",
    "plugin:testing-library/recommended"
  ],
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "plugins": [
    "jsdoc",
    "react-hooks",
    "testing-library"
  ],
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "jsx-a11y/anchor-is-valid": [ "error", {
      "components": [ "Link" ],
      "specialLink": [ "to" ]
    }]
    
  }
}
